{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "@polarParser",
    "module": "Node16",
    "target": "ES6",
    "lib": ["dom", "ES2019"],
    "noEmit": false,
    "declaration": true,
    "preserveSymlinks": false,
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    // "noUnusedLocals": true,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "typeRoots": ["./types", "../../node_modules/@types", "../../@types"]
  },
  "include": ["src", "src/types/ts-models/fit-file-parser.d.ts"]
}
